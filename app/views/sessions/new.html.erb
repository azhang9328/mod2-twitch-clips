<%= form_for @user, url: login_path do |f| %>
    <%= f.label "Username:"%>
    <%= f.text_field :username %><br>
    <%= f.label :password %>
    <%= f.password_field :password %> <br>
    <%= f.submit 'Login'%>
<%end%>
<br>
<%= link_to 'Sign Up', controller: "users", action: "new" %>


<% if flash[:alert]%>
<%= flash[:alert] %>
<% end%>