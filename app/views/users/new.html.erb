<%= form_for @user do |f| %>
  <%= f.label "Username:" %>
  <%= f.text_field :username %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>

  <%= f.submit "Create Account" %>
<% end %>

<% if flash[:alert]%>
<%= flash[:alert] %>
<% end%>